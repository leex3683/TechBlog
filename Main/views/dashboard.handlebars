{{#each blogposts as |blogpost|}}

<div class="card py-2 ">
  <div class="card-header">
    posted by {{blogpost.user.name}} on {{format_date blogpost.date_created}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{blogpost.name}}</h5>
    <p class="card-text">{{blogpost.post}}</p>
    <a href="/update/{{blogpost.id}}" class="btn btn-primary blogpost{{blogpost.id}}">Update</a>
  </div>
</div>

{{/each}}
<a href="/newpost" class="mt-5 btn btn-primary" >Add a New Post</a>