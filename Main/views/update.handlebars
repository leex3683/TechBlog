{{#each blogposts as |blogpost|}}
  {{! add form here }}
  <form class="form update-form">
<div class="form-group">

      <div class="mb-3">
        <label
          for="title"
          class="form-label"
        >Blog Title</label>
        <textarea
          class="form-control"
          id="title"
          rows="1"
        >{{blogpost.name}}</textarea>
      </div>
    </div>
    <div class="form-group input-lg">

      <div class="mb-3">
        <label
          for="post"
          class="form-label"
        >Content</label>
        <textarea
          class="form-control"
          id="post"
          rows="3"
        >{{blogpost.post}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
{{/each}}

<script src="../js/update.js"></script>