{{#each blogposts as |blogpost|}}
<div class="card py-2">
  <div class="card-header">
    posted by {{blogpost.user.name}} on {{format_date blogpost.date_created}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{blogpost.name}}</h5>
    <p class="card-text">{{blogpost.post}}</p>
  </div>
</div>
{{/each}}
{{#each blogpostcomments as |bpcomment|}}

<div class="card py-2 pl-5 ">
  <div class="card-header bg-secondary text-white">
    posted by {{bpcomment.user.name}} on {{format_date bpcomment.date_created}}
  </div>
  <div class="card-body">
    <p class="card-text">{{bpcomment.posted_comment}}</p>
  </div>
</div>

{{/each}}

